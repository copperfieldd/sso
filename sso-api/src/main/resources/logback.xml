<configuration>
	<property name="BasePath" value="data/SSO/logs"/>
	<appender name="A5" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
		<DatePattern>'_'yyyy-MM-dd'.log'</DatePattern>
		<File>${BasePath}/sqlExecute.log</File>
		<Encoding>UTF-8</Encoding>
		<encoder>
			<pattern>[SSO:API] %d{yyyy-MM-dd HH:mm:ss} [%t:%r] - [%p] %m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DRUID</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<maxIndex>5</maxIndex>
			<FileNamePattern>${BasePath}/sqlExecute.log.%i</FileNamePattern>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>50MB</MaxFileSize>
		</triggeringPolicy>
	</appender>

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<Target>System.out</Target>
		<encoder>
			<pattern>[SSO:API] %d{yyyy-MM-dd HH:mm:ss} %5p %c{1}:%L - %m%n</pattern>
		</encoder>
	</appender>

	<appender name="D" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--See http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
		<!--and http://logback.qos.ch/manual/appenders.html#TimeBasedRollingPolicy-->
		<!--for further documentation-->
		<Append>true</Append>
		<encoder>
			<pattern>[SSO:API]%d{yyyy-MM-dd HH:mm:ss} [%t:%r] - [%p] %m%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${BasePath}/applog.%d{yyyy-MM-dd}.log</FileNamePattern>
		</rollingPolicy>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>

	<appender name="E" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--See http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
		<!--and http://logback.qos.ch/manual/appenders.html#TimeBasedRollingPolicy-->
		<!--for further documentation-->
		<Append>true</Append>
		<encoder>
			<pattern>[SSO:API] %d{yyyy-MM-dd HH:mm:ss} [%t:%r] - [%p] %m%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${BasePath}/app-error.%d{yyyy-MM-dd}.log</FileNamePattern>
		</rollingPolicy>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
	</appender>

	<logger name="sqlLogger" additivity="false" level="DEBUG">
		<appender-ref ref="A5"/>
	</logger>
	<!--log4jdbc -->
	<logger name="jdbc.sqltiming" level="INFO" >
		<appender-ref ref="A5"/>
		<appender-ref ref="stdout"/>
	</logger>

	<logger name="errorLogger" additivity="false" level="ERROR">
		<appender-ref ref="E"/>
	</logger>

	<root level="INFO">
		<appender-ref ref="stdout"/>
		<appender-ref ref="D"/>
	</root>
</configuration>