<!-- at http://www.qos.ch/mailman/listinfo/logback-user             -->
<!--                                                                -->
<!-- For professional support please see                            -->
<!--    http://www.qos.ch/shop/products/professionalSupport         -->
<!--                                                                -->
<configuration>
	<appender name="A5" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
		<DatePattern>'_'yyyy-MM-dd'.log'</DatePattern>
		<File>data/logs/ch-krobelus/krobelus-task-sqlExecute.log</File>
		<Encoding>UTF-8</Encoding>
		<encoder>
			<pattern>[ch-krobelus:task] %d{yyyy-MM-dd HH:mm:ss} [%t:%r] - [%p] %m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DRUID</level>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<maxIndex>5</maxIndex>
			<FileNamePattern>data/logs/ch-krobelus/krobelus-task-sqlExecute.log.%i</FileNamePattern>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>50MB</MaxFileSize>
		</triggeringPolicy>
	</appender>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<Target>System.out</Target>
		<encoder>
			<pattern>[ch-krobelus:task] %d{yyyy-MM-dd HH:mm:ss} %5p %c{1}:%L - %m%n</pattern>
		</encoder>
	</appender>
	<appender name="D" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--See http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
		<!--and http://logback.qos.ch/manual/appenders.html#TimeBasedRollingPolicy-->
		<!--for further documentation-->
		<Append>true</Append>
		<File>data/logs/ch-krobelus/krobelus-task.log</File>
		<encoder>
			<pattern>[ch-krobelus:task] %d{yyyy-MM-dd HH:mm:ss} [%t:%r] - [%p] %m%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>logs/krobelus-task.%d{yyyy-MM-dd}.log</FileNamePattern>
		</rollingPolicy>
	</appender>
	<appender name="E" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--See http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
		<!--and http://logback.qos.ch/manual/appenders.html#TimeBasedRollingPolicy-->
		<!--for further documentation-->
		<Append>true</Append>
		<File>data/logs/ch-krobelus/krobelus-task-error.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>data/logs/krobelus-task-error.%d{yyyy-MM-dd}.log</FileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>[ch-krobelus:task] %d{yyyy-MM-dd HH:mm:ss} [%t:%r] - [%p] %m%n</pattern>
		</encoder>
	</appender>
	<logger name="sqlLogger" additivity="true" level="DEBUG">
		<appender-ref ref="A5"/>
	</logger>
	<logger name="infoLogger" level="INFO">
		<appender-ref ref="D"/>
	</logger>
	<logger name="errorLogger" level="ERROR">
		<appender-ref ref="E"/>
	</logger>
	<logger name="dao" level="DEBUG">
		<appender-ref ref="A5"/>
	</logger>
	<root level="TRACE">
		<appender-ref ref="stdout"/>
		<appender-ref ref="D"/>
	</root>
</configuration>